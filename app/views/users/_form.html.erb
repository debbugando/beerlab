<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field">
        <i class="material-icons prefix">account_circle</i>
        <input id="icon_prefix" type="text" class="validate" value="<%= @user.name %>">
        <label for="icon_prefix">Nome do Usuário:</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <i class="material-icons prefix">phone</i>
        <input id="icon_email" type="email" class="validate" value="<%= @user.email %>">
        <label for="icon_email">Email do Usuário:</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">
      <%= @user.new_record? ? "Criar" : "Editar" %>
      <i class="material-icons right">send</i>
    </button>
    <%= link_to "Cancelar", users_path, class: "btn" %>
  </div>
